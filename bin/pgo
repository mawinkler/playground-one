    s3scanner|all)
      tf s3scanner erase
      ;;&
    scenarios|scenarios-ec2|all)
      tf scenarios-ec2 erase
      ;;&
    scenarios-fg|all)
      tf scenarios-fg erase
      ;;&
    scenarios-cloudtrail|all)
      tf scenarios-cloudtrail erase
      ;;&
    scenarios-cspm|all)
      tf scenarios-cspm erase
