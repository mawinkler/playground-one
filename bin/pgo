      terraform show
      ;;&
    ecs|all)
      cd ${ONEPATH}/awsone/5-cluster-ecs
      terraform show
      ;;&
    scenarios|scenarios-ec2|all)
      cd ${ONEPATH}/awsone/7-scenarios-ec2
      terraform show
      ;;&
    scenarios-fg|all)
      cd ${ONEPATH}/awsone/7-scenarios-fargate
      terraform show
