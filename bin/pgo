#######################################
# Controls Colima on Darwin
# Globals:
#   None
# Arguments:
#   enable|disable
# Outputs:
#   None
#######################################
function colima-service() {

  telemetry "colima-service" $1

  case $1 in
    enable|true)
      # brew services start colima
      colima start
      ;;
    disable|false)
      # brew services stop colima
      colima stop
      ;;
  esac
}

#######################################
# Cleanup Terraform state and modules
# Globals:
#   None
# Arguments:
#   Configuration name or all
# Outputs:
#   None
#######################################
function erase() {

  telemetry "cleanup" $1

  case $1 in
    user|all)
      tf user erase
      ;;&
    nw|network|all)
      tf network erase
      ;;&
    ec2|instances|all)
      tf instances erase
      ;;&
    eks|eks-ec2|all)
      tf eks-ec2 erase
      tf eks-ec2-deployments erase
      ;;&
    eks-fg|all)
